{
  "name": "postgraphql_roles",
  "version": "1.0.0",
  "description": "Sqitch-based roles for postgraphql project",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "config": {
    "targetdb": "db:pg:postgraphql"
  },
  "scripts": {
    "test": "pg_prove -p ${SQITCH_DB_PORT} -U ${SQITCH_DB_USER} -h ${SQITCH_DB_HOST} -d ${SQITCH_DB_URI} test/*.sql"
    "sqitch:deploy": "sqitch deploy ${SQITCH_DB_URI}",
    "sqitch:revert": "sqitch revert ${SQITCH_DB_URI}",
    "install": "SQITCH_DB_URI=${SQITCH_DB_URI:-$npm_package_config_targetdb} npm run sqitch:deploy"
  },
  "repository": {
    "type": "git",
    "url": "gitolite:a/jmarca/graphql_work/postgraphql/postgraphql_roles"
  },
  "author": "James E. Marca",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmarca/postgraphql_roles/issues"
  },
  "homepage": "https://github.com/jmarca/postgraphql_roles#readme"
}
